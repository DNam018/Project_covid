<link rel="stylesheet" href="/assets/css/tooplate-main.css">
<link rel="stylesheet" href="/assets/css/flex-slider.css">

<div id="content">
    <!-- Single Starts Here -->
    <div class="single-product" style="margin-top: -80px;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                        <div class="line-dec"></div>
                        <h1>Chi tiết gói nhu yếu phẩm</h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="product-slider">
                        <div id="carouselExampleControls" class="carousel slide card-img-top" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="https://satbabau.vn/wp-content/uploads/2018/08/trong-thang-dau-ba-bau-an-gi-de-dam-bao-cung-cap-day-du-duong-chat-cho-thai-nhi.jpeg"
                                        class="d-block w-150" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="https://admin.thethaohcm.vn/resize_x500x/js/tiny_mce/plugins/imagemanager/files/thuc-pham-giau-protein.jpg"
                                        class="d-block w-150" alt="...">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden"></span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden"></span>
                            </button>
                        </div>
                    </div>
                </div>
                {{#each this.Package}}
                <div class="col-md-6">
                    <div class="right-content" id="{{Id}}" name="{{Id}}">
                        <h2>{{NamePackage}}</h2>
                        <h6>Thành phần bao gồm: </h6>
                        <br><br>
                        {{#each ../this.product}}
                        <div class="card-body">
                            <li class="card-text" style="margin-top: -70px;">{{NameProduct}}</li>
                        </div>
                        {{/each}}

                        <span>
                            <h4>Tổng tiền: {{../totalPrice}} VNĐ</h4>
                        </span>

                        <div style="margin-top: 0px">
                            <p>{{introduce}}</p>
                            <span>packets available </span>
                        </div>
                        <form method="get">
                            <label for="quantity">Quantity:</label>
                            <input name="quantity" type="quantity" class="quantity-text" id="quantity"
                                onfocus="if(this.value == '1') { this.value = ''; }"
                                onBlur="if(this.value == '') { this.value = '1';}" value="1">
                            <button type="button" class="btn btn-info" data-bs-toggle="modal" style="margin-left: 20px;"
                                data-bs-target="#exampleBuy" data-target="#exampleBuy">Mua ngay!</button>
                        </form>
                        <div class="down-content">
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <!-- Single Page Ends Here -->

    <!-- Similar Ends Here -->

    <div class="modal fade" id="exampleBuy" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">CHỌN HÌNH THỨC THANH TOÁN</h4>
                </div>
                <form align="center">
                    <div class="modal-body">
                        <button type="submit" class="btn btn-info" formmethod="post" style="margin-right: 50px;"
                            formaction="/paynow">Thanh toán ngay</button>

                        <button type="submit" class="btn btn-info" formmethod="post"
                            formaction="/user/buyPackages/paylater">Thanh toán sau</button>
                    </div>
                    <div class="modal-footer">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

