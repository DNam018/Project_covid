<div id="content">
    <div class="card">
        <div class="card-header">
            <link rel="stylesheet" href="/assets/css/tooplate-main.css">
            <div class="featured-page">
                <div class="container" style="margin-top: -100px;">
                    <div class="row navbar navbar-expand-lg bg-linear">
                        <div class="col-md-3 col-sm-12">
                            <div class="section-heading">
                                <div class="line-dec"></div>
                                <h1>THÔNG TIN CÁ NHÂN</h1>
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-12">
                            <div id="filters" class="button-group" style="margin-right: 20px;">
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleManage">Lịch sử được quản lý</button>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleProduct">Lịch sử tiêu thụ gói Nhu yếu phẩm</button>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleDebt">Xem dư nợ</button>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#examplePay">Lịch sử thanh toán</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="container" style="margin-top: 10px;">
                <div class="row">
                    <div class="col-11 mx-auto profile">
                        <div class="py-3 px-2 px-lg-4 py-lg-5">
                            <div class="row">
                                <div class="avatarBox col-12 col-lg-5">
                                    <img src="https://png.pngtree.com/png-clipart/20200701/original/pngtree-black-default-avatar-png-image_5407174.jpg"
                                        class="img-fluid" width="200">
                                    <hr>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleChangeInfo">Thay đổi thông tin tài khoản</button>
                                </div>
                                <div class="infoBox col-12 col-lg-6 mt-2 mt-lg-0">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col"></th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each this.profile}}
                                            <tr>
                                                <th scope="row">Họ và tên:</th>
                                                <th scope="row">{{Name}}</th>
                                            </tr>
                                            <tr>
                                                <th scope="row">Năm:</th>
                                                <th scope="row">{{Year}}</th>
                                            </tr>
                                            <tr>
                                                <th scope="row">Địa chỉ:</th>
                                                <th scope="row">{{Address}}</th>
                                            </tr>
                                            <tr>
                                                <th scope="row">Tiền nợ:</th>
                                                <th scope="row">{{Debt}}</th>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleManage" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form>
                    <div class="text-center" style="margin-top: 10px;">
                        <h5 class="modal-title" id="exampleModalLabel">Lịch sử được quản lý</h5>
                    </div>
                    {{#if this.empty}}
                    <div class="card-body">
                        <p class="card-text">Không có dữ liệu.</p>
                    </div>
                    {{else}}
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">IDHistory</th>
                                <th scope="col">IDManager</th>
                                <th scope="col">TimeStart</th>
                                <th scope="col">TimeEnd</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.HistoryManager}}
                            <tr>
                                <th scope="row" class="text-center">{{IdHistory}}</th>
                                <td>{{IdManager}}</td>
                                <td>{{TimeStart}}</td>
                                <td>{{TimeEnd}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{/if}}
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="text-center" style="margin-top: 10px;">
                    <h5 class="modal-title" id="exampleModalLabel">Lịch sử tiêu thụ gói Nhu yếu phẩm</h5>
                </div>
                <form method="post" action="/add">
                    <div class="modal-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">TÊN GÓI</th>
                                    <th scope="col">GIÁ TIỀN</th>
                                    <th scope="col">SỐ LƯỢNG</th>
                                </tr>

                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Thức ăn</td>
                                    <td>200.000VND</td>
                                    <td>2</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Nước uống</td>
                                    <td>100.000VND</td>
                                    <td>5</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleDebt" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="text-center" style="margin-top: 10px;">
                    <h5 class="modal-title" id="exampleModalLabel">XEM DƯ NỢ</h5>
                </div>
                <form method="post" action="/add">
                    <div class="modal-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Số tiền nợ: </th>
                                    <th scope="col">Số dư hiện tại: </th>
                                </tr>

                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1.000.000 VND</th>
                                    <td>800.000 VND</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="examplePay" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="text-center" style="margin-top: 10px;">
                    <h5 class="modal-title" id="exampleModalLabel">Lịch sử thanh toán</h5>
                </div>
                <form method="post" action="/add">
                    <div class="modal-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">ID</th>
                                    <th scope="col">GIÁ TIỀN</th>
                                    <th scope="col">TRẠNG THÁI</th>
                                </tr>

                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>1</td>
                                    <td>200.000VND</td>
                                    <td>Đã thanh toán</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>2</td>
                                    <td>100.000VND</td>
                                    <td>Chưa thanh toán</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleChangeInfo" tabindex="-1" aria-labelledby="addProductLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Chỉnh sửa thông tin cá nhân</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="/user/profile">
                            <div class="form-row">
                                <div class="form-group col-md-5">
                                    <label for="inputName">Họ tên</label>
                                    <input type="text" class="form-control" id="inputName">
                                </div>
                                <div class="form-group col-md-5">
                                    <label for="inputYear">Năm</label>
                                    <input type="text" class="form-control" id="inputYear">
                                </div>
                            </div>
                            <div class="form-row my-0">
                                <div class="form-group col-md-12 my-0">
                                    <label>Địa chỉ</label>
                                </div>
                            </div>
                            <div class="form-row border rounded mb-1">
                                <div class="form-group col-md-4 ">
                                    <label for="inputEmail4">Tỉnh/thành phố</label>
                                    <select id="inputState" class="form-control">
                                        <option selected>Choose...</option>
                                        <option>...</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputPassword4">Quận/huyện</label>
                                    <select id="inputState" class="form-control">
                                        <option selected>Choose...</option>
                                        <option>...</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputPassword4">Phường/xã</label>
                                    <select id="inputState" class="form-control">
                                        <option selected>Choose...</option>
                                        <option>...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group mb-2">
                                <label for="productImage">Avatar: </label>
                                <input class="form-control" type="file" name="productImage" id="productImage" multiple>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-search"
                            aria-hidden="true"></i>Change</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{#section 'css'}}
