<div id="content">
    <div class="card">
        <div class="card-header">
            <nav class="navbar navbar-expand-lg bg-linear">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/manager/packets" style="color: white;">Các gói nhu yếu phẩm</a>
                    <form class="d-flex">
                        <a class="btn btn-outline-light me-2" role="button" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </a>

                        <div class="dropdown">
                            <button class="btn btn-outline-light me-2 dropdown-toggle" id="dropdownMenuButton"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-filter" aria-hidden="true"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" href="/product/filter/byName">Lọc theo tên</a></li>
                                <li><a class="dropdown-item" href="/product/filter/byCost">Lọc theo giá tiền</a></li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-outline-light me-2 dropdown-toggle" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-sort" aria-hidden="true"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="/product/sort/byName">Sắp xếp theo tên</a></li>
                                <li><a class="dropdown-item" href="/product/sort/byCost">Sắp xếp theo giá tiền</a></li>
                            </ul>
                        </div>
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit"><i class="fas fa-search"
                                aria-hidden="true"></i></button>
                    </form>
                </div>

            </nav>
        </div>
        <!-- **#if this.empty**
                <div class="card-body">
                    <p class="card-text">Không có dữ liệu.</p>
                </div>
                **else** -->
        <div class="card-body">


            <div class="accordion" id="accordionExample">
                <!-- **#each this.packets ** -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Packet #1
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                        data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <p><strong> Tên gói: </strong> Packet #1</p>
                            <p><strong> Danh sách các sản phẩm trong gói:</strong></p>
                            <ul>
                                <li>Product 1</li>
                                <li>Product 2</li>
                            </ul>
                            <p> <strong>Mức giới hạn số lượng mỗi sản phẩm trong gói:</strong> 1</p>
                            <p> <strong>Mức giới hạn gói cho mỗi người theo thời gian: </strong> 1</p>
                            <p> <strong>Thời gian giới hạn (ngày, tuần, tháng): </strong> 11/2/2022</p>
                        </div>
                        <div class="accordion-footer ms-3 mb-1">
                            <a class="btn btn-outline-primary" href="/product/edit?id" role="button" title="Edit"
                                data-id="1" data-name="2">
                                <i class="far fa-edit" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-outline-danger" href="/product/del/" role="button">
                                <i class="fas fa-trash" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-outline-info" role="button" data-bs-toggle="modal"
                                data-bs-target="#exampleModal1">
                                More Info
                                <i class="fas fa-chevron-right" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- **/each** -->
            </div>

        </div>
    </div>
    <!-- Modal of More Info-->
    <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông tin chi tiết</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- #each products -->
                    <div class="card h-100 mx-auto mb-2" style="width: 20rem;">

                        <div id="carouselExampleControls" class="carousel slide card-img-top" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/21/Flag_of_Vietnam.svg/2560px-Flag_of_Vietnam.svg.png"
                                        class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3e/Flag_of_New_Zealand.svg/2560px-Flag_of_New_Zealand.svg.png"
                                        class="d-block w-100" alt="...">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden"></span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden"></span>
                            </button>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Product</h5>
                            <p class="card-text">Giá tiền: 150.000 VNĐ</p>
                            <p class="card-text">Đơn vị định lượng: cái</p>
                        </div>
                    </div>
                    <!-- /each -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal of Add-->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <form method="post" action="/add">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Thêm gói nhu yếu phẩm</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group mb-2">
                            <label for="packetName">Tên gói: </label>
                            <input class="form-control" type="text" name="packetName" id="packetName">
                        </div>
                        <div class="form-group mb-2">
                            <label for="productOfPacket">Danh sách các sản phẩm: </label>
                            <br>
                            <ul style="list-style-type: none;">
                                <!-- each products -->
                                <li>
                                    <input type="checkbox" id="product1" name="product1" value="Product1">
                                    <label for="product1"> Product 1</label><br>
                                </li>
                                <!-- /each -->
                                <li>
                                    <!-- delete this -->
                                    <input type="checkbox" id="product2" name="product2" value="Product2">
                                    <label for="product2"> Product 2</label><br>
                                </li>
                            </ul>
                        </div>
                        <div class="form-group mb-2">
                            <label for="packetLimitProduct">Mức giới hạn số lượng mỗi sản phẩm trong gói: </label>
                            <input class="form-control" type="number" name="packetLimitProducte"
                                id="packetLimitProduct">
                        </div>
                        <div class="form-group mb-2">
                            <label for="packetLimitPacket">Mức giới hạn gói cho mỗi người theo thời gian: </label>
                            <input class="form-control" type="number" name="packetLimitPacket" id="packetLimitPacket">
                        </div>
                        <div class="form-group mb-2">
                            <label for="limitTime">Thời gian giới hạn: </label>
                            <input class="form-control" type="date" name="limitTime" id="limitTime">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

